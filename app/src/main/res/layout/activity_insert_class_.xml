<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBack"
    android:orientation="vertical"
    tools:context=".Insert_class_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_insert_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Create Class" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:focusedByDefault="false"
        android:text="Just create your class to manage daily attendance and report them. Add students in the next step"
        android:textColor="@color/text_color_dark" />


    <EditText
        android:id="@+id/subjectName_createClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edittext_back"
        android:focusedByDefault="true"
        android:hint="Subject name"
        android:inputType="textCapWords"
        android:lines="1"
        android:padding="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:text="Department:"
        android:textColor="@color/theme_light" />

    <Spinner
        android:id="@+id/spinnerDepartment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edittext_back" />

    <TextView
        android:id="@+id/textViewSem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:text="Semester:"
        android:textColor="@color/theme_light" />

    <Spinner
        android:id="@+id/spinnerSemester"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edittext_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:text="Select theme :"
        android:textColor="@color/text_color_dark"
        android:textSize="18dp" />

    <co.ceryle.radiorealbutton.library.RadioRealButtonGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:rrbg_animateImages_enter="overshoot"
        app:rrbg_animateTexts_enter="decelerate"
        app:rrbg_bottomLineSize="0dp"
        app:rrbg_dividerSize="0dp"
        app:rrbg_position="0"
        app:rrbg_selectorBringToFront="true"
        app:rrbg_selectorColor="@color/theme_light"
        app:rrbg_selectorRadius="1dp"
        app:rrbg_selectorSize="6dp">

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/asset_bg_paleblue"
            app:rrb_imageHeight="50dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/asset_bg_green"
            app:rrb_imageHeight="50dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/asset_bg_yellow"
            app:rrb_imageHeight="50dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/asset_bg_palegreen"
            app:rrb_imageHeight="36dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/asset_bg_paleorange"
            app:rrb_imageHeight="36dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/asset_bg_white"
            app:rrb_imageHeight="36dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black" />
    </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>

    <Button
        android:id="@+id/button_createClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_back"
        android:padding="8dp"
        android:text="create"
        android:textColor="@color/white" />

</LinearLayout>